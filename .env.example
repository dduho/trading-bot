# Trading Bot Configuration
# Copy this file to .env and fill in your API credentials

# ============================================================================
# EXCHANGE CONFIGURATION
# ============================================================================

# Market Data Source (options: binance, coinbase, kraken, kucoin, etc.)
EXCHANGE=binance

# API Credentials (get from your exchange account)
# For paper mode: Leave empty or use fake values
# For testnet mode: Use testnet API keys from exchange
# For live mode: Use real API keys (READ/WRITE permissions, NO WITHDRAW!)
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# ============================================================================
# TRADING MODE - CRITICAL SETTING!
# ============================================================================
#
# paper    = Simulation only, no real orders, no API needed
# testnet  = Exchange testnet with fake money (requires testnet API keys)
# live     = REAL TRADING WITH REAL MONEY (requires real API keys)
#
# ⚠️  ALWAYS START WITH 'paper' TO TEST YOUR STRATEGY! ⚠️
#
TRADING_MODE=paper

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================

DEFAULT_SYMBOL=BTC/USDT
TIMEFRAME=1m  # 1m, 5m, 15m, 1h, 4h, 1d

# Risk Management
MAX_POSITION_SIZE=0.1  # Maximum % of portfolio per trade
STOP_LOSS_PERCENT=2.0  # Stop loss percentage
TAKE_PROFIT_PERCENT=5.0  # Take profit percentage
MAX_DAILY_LOSS=5.0  # Maximum daily loss percentage

# Analysis Settings
RSI_PERIOD=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
ENABLE_LOGGING=true
LOG_LEVEL=INFO

