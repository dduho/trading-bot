# Trading Bot Configuration
# Copy this file to .env and fill in your API credentials

# Market Data Source (options: binance, coinbase, kraken, alpaca)
EXCHANGE=binance

# API Credentials (get from your exchange)
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# Trading Configuration
TRADING_MODE=paper  # paper or live (ALWAYS test with paper first!)
DEFAULT_SYMBOL=BTC/USDT
TIMEFRAME=1m  # 1m, 5m, 15m, 1h, 4h, 1d

# Risk Management
MAX_POSITION_SIZE=0.1  # Maximum % of portfolio per trade
STOP_LOSS_PERCENT=2.0  # Stop loss percentage
TAKE_PROFIT_PERCENT=5.0  # Take profit percentage
MAX_DAILY_LOSS=5.0  # Maximum daily loss percentage

# Analysis Settings
RSI_PERIOD=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
ENABLE_LOGGING=true
LOG_LEVEL=INFO
